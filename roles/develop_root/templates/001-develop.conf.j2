<Directory {{ ansible_env.HOME }}/public_html>
  Require all granted
  AllowOverride All
  <FilesMatch "\.php$">
    SetHandler "proxy:unix:/var/run/php/php8.0-fpm.sock|fcgi://localhost"
  </FilesMatch>
</Directory>

<VirtualHost *:80>
  DocumentRoot {{ ansible_env.HOME }}/public_html

  ErrorLog ${APACHE_LOG_DIR}/error.log
  CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>
